<div class="col-xs-6 col-xs-offset-3">
  <div class="panel panel-default panel_new_song">
    <div class="panel-heading text-center">
      <h2>Sign up</h2> 
    </div>
    <div class="panel-body">

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
        	<%= f.input :username, required: true, autofocus: true %>
          <%= f.input :email, required: true %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
          <%= f.label :avatar, label: "Add your image/avatar", class:"form_field_cover" %>
          <%= f.file_field :avatar, class:"form_field_cover" %>
          <%= f.input :remote_avatar_url, label: "or paste image/avatar URL here" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up" %>
        </div>
      <% end %>
    </div>
    <div class="panel-footer">
     <%= render "devise/shared/links" %> 
    </div>
  </div>
</div>


